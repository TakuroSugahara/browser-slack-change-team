{
  "manifest_version": 2,
  "name": "slack+shortcut",
  "description": "slack shortcut extention",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [{
    "matches": ["https://app.slack.com/client/*"],
    "js": ["script.js"]
  }]
}
